	{{#unless onGateway}}
	<h2>{{translate 'worksite_posts_label'}}&nbsp;<a target="_blank" href="/direct/clog-rss/site/{{siteId}}.xml" title="{{translate 'user_rss_tooltip'}}"><img src="/library/image/silk/feed.png"/></a></h2>
	{{/unless}}
	{{#unless posts.length}}
	<div id="noPostsLabel"><span>{{translate 'noPosts'}}</span></div>
	{{else}}
	<div style="clear: left; margin-top: 10px;" id="viewOptions">
   		<input type="checkbox"
                 {{#unless showBody}} checked {{/unless}}
                 onclick="clog.toggleFullContent(this);"/>
		<span>{{translate 'show_title_only_label'}}</span>
   	</div>
	{{/unless}}
    <div id="postsWrapper">
    	<br />
  	 	<div id="posts">
	  	    <table class="tableHeader">
				<tbody>
					{{#each posts}}
					<tr>
						<td>
							<div id="post_{{id}}"></div>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
